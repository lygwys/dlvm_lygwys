                    $('#jslibrary_text').val('');
                    $('#jslibrary').val('');
                    var _LayoutConfig = $('#LayoutConfig').val();
                    if (_LayoutConfig != "") {
                        var objRowdatas = JSON.parse(_LayoutConfig);
